<div class="customizer top-customizer">
  <div class="box">
		<div class="row"><div class="span12"><div class="paddings">
			<h1><%= customizer.title %></h1>
		</div></div></div>
		<div class="row">
		  <div class="span5 bottom"><div class="paddings">
			  <div class="image">
		      <%= image_tag customizer.shopfront(:customizer_full) %>
			  </div>
		  </div></div>
		  <div class="span7 bottom"><div class="paddings">
			  <div class="subtitle">
			    <%= customizer.subtitle %>
			  </div>
		    <div class="form">
				  <%= form_tag (customizer_path(customizer.id)) do %>
				    <% for param in customizer.customization_params.sort_by {|param| param.order} do %>
							<div class="param">
					      <%= label_tag(param.name.to_sym, param.title) %>

								<% if param.type == 'string' %>
									<%= text_field_tag (param.name.to_sym) %>
					      <% end %>

								<% if param.type.is_json? %>
									<% t = JSON.parse(param.type) %>
									<% if t.kind_of?(Array) %>
								    <%= select_tag(param.name.to_sym, options_for_select(t)) %>
									<% end %>
								<% end %>
					      <div class="hint"><%= param.hint %></div>
							</div>
				    <% end %>
				    <%= link_to 'Сделать заказать', '#', :class => 'btn btn-primary' %>
				    <%= javascript_tag do -%>
			        $('a.btn-primary').click(function(){
			          $(this).closest('form').submit();
			          return false;
			        });
				    <% end %>
					<% end %>
		    </div>
			</div></div>
		</div>
	</div>
</div>